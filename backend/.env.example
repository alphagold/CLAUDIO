# Photo Memory Backend - Environment Variables
# Copy this file to .env and customize values

# API
APP_NAME=Photo Memory API
VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql://photomemory:photomemory123@postgres:5432/photomemory

# Redis
REDIS_URL=redis://redis:6379/0

# Ollama Vision AI
OLLAMA_HOST=http://ollama:11434
OLLAMA_MODEL_FAST=moondream
OLLAMA_MODEL_DEEP=llama3.2-vision:11b

# MinIO Storage
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=photomemory
MINIO_SECURE=false

# JWT Authentication
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=10080

# Embeddings
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIMENSION=384

# Upload limits
MAX_UPLOAD_SIZE=52428800
ALLOWED_EXTENSIONS=.jpg,.jpeg,.png,.heic,.webp

# Processing
THUMBNAIL_SIZES=128,512
ANALYSIS_TIMEOUT=30
